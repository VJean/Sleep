<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<BorderPane fx:id="rootBorderPane" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.SleepController">
   <center>
      <GridPane alignment="center" hgap="20.0" prefWidth="500.0" vgap="20.0" BorderPane.alignment="CENTER">
         <columnConstraints>
            <ColumnConstraints percentWidth="50.0" />
            <ColumnConstraints percentWidth="50.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
            <RowConstraints minHeight="10.0" prefHeight="30.0" />
         </rowConstraints>
         <children>
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Label text="Date:" />
                  <DatePicker fx:id="beginDatePicker" />
               </children>
            </HBox>
            <HBox alignment="CENTER_RIGHT" layoutX="15.0" layoutY="15.0" spacing="10.0" GridPane.rowIndex="1">
               <children>
                  <Label text="Date:" />
                  <DatePicker fx:id="endDatePicker" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="15.0" layoutY="15.0" spacing="10.0" GridPane.columnIndex="1">
               <children>
                  <Label text="Hour:" />
                  <Spinner fx:id="beginHourField" max="23" min="0" prefWidth="55.0" />
                  <Label text="Minute:" />
                  <Spinner fx:id="beginMinuteField" max="59" min="0" prefWidth="55.0" />
               </children>
            </HBox>
            <HBox alignment="CENTER_LEFT" layoutX="409.0" layoutY="15.0" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <children>
                  <Label text="Hour:" />
                  <Spinner fx:id="endHourField" max="23" min="0" prefWidth="55.0" />
                  <Label text="Minute:" />
                  <Spinner fx:id="endMinuteField" max="59" min="0" prefWidth="55.0" />
               </children>
            </HBox>
            <CheckBox fx:id="aloneCheckBox" contentDisplay="RIGHT" mnemonicParsing="false" text="Alone ?" GridPane.halignment="RIGHT" GridPane.rowIndex="2" />
            <HBox alignment="CENTER_LEFT" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <children>
                  <Label text="Place: " />
                  <ChoiceBox fx:id="placeChoiceBox" prefWidth="150.0" GridPane.columnIndex="1" GridPane.halignment="LEFT" GridPane.rowIndex="2" />
               </children>
            </HBox>
            <Button fx:id="addButton" mnemonicParsing="false" onAction="#addSleepItem" prefWidth="80.0" text="Add" GridPane.columnSpan="2147483647" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
         </children>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </GridPane>
   </center>
   <top>
      <MenuBar BorderPane.alignment="CENTER">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#loadProfile" text="Open profile..." />
                  <MenuItem mnemonicParsing="false" onAction="#saveProfile" text="Save profile..." />
                  <MenuItem mnemonicParsing="false" text="Close" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" text="Delete" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" text="About" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
